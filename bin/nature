#!/usr/bin/env bash

set -u
set -e

ARGUMENT=${1:-''}
SOUND=~/.dotfiles/data/nature.mp3

# Easy way to stop script when running in background
if [ "$ARGUMENT" == "stop" ]; then
    kill $(ps aux | grep "afplay $SOUND" | awk '{print $2}')
    exit 0
fi

while :; do afplay $SOUND; done \
    > /dev/null 2>&1 &
