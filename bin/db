#!/bin/sh

if [ "$1" = "list" ] ; then
    mysql -u root -e "show databases;"
    exit 0
fi

if [ ! -z "$2" ]; then
    if [ "$1" = "create" ] ; then
        mysql -u root -e "create database $2 ;"
    elif [ "$1" = "drop" ] ; then
        mysql -u root -e "drop database if exists $2 ;"
    elif [ "$1" = "list" ] ; then
        mysql -u root -e "show databases;"
    elif [ "$1" = "raw" ] ; then
        mysql -u root -e "show databases;"
    else
        echo "Unknown command"
        exit 1
    fi
    exit 0
fi

echo "Usage: db [create|drop|list] [database-name]"
exit 1
